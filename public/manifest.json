{
  "manifest_version": 3,
  "name": "Privacy Curtain",
  "version": "1.0",
  "description": "Privacy-focused browser extension that provides selective content blurring across multiple platforms.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://teams.microsoft.com/*",
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://teams.microsoft.com/*",
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon-eye.png",
      "32": "assets/icon-eye.png", 
      "48": "assets/icon-eye.png",
      "128": "assets/icon-eye.png"
    },
    "default_title": "Privacy Curtain",
    "default_popup": "index.html"
  }
}
